{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "lint": {
      "outputs": []
    },
    "clean": {
      "cache": false
    },
    "generate": {
      "outputs": ["node_modules/.prisma/**"]
    },
    "build": {
      "dependsOn": ["generate"],
      "outputs": ["dist/**", "build/**", "public/**"],
      "env": [
        "DATABASE_URL", 
        "PRIVY_SECRET", 
        "NODE_ENV",
        "WXT_PUBLIC_KEY",
        "WXT_PUBLIC_WEB_URL", 
        "WXT_PUBLIC_API_URL",
        "WXT_PUBLIC_WS_URL"
      ],
      "passThroughEnv": [
        "DATABASE_URL", 
        "PRIVY_SECRET", 
        "NODE_ENV",
        "WXT_PUBLIC_KEY",
        "WXT_PUBLIC_WEB_URL", 
        "WXT_PUBLIC_API_URL",
        "WXT_PUBLIC_WS_URL"
      ]
    },
    "start": {
      "cache": false,
      "persistent": true,
      "env": [
        "DATABASE_URL", 
        "PRIVY_SECRET", 
        "NODE_ENV",
        "WXT_PUBLIC_KEY",
        "WXT_PUBLIC_WEB_URL", 
        "WXT_PUBLIC_API_URL",
        "WXT_PUBLIC_WS_URL"
      ],
      "passThroughEnv": [
        "DATABASE_URL", 
        "PRIVY_SECRET", 
        "NODE_ENV",
        "WXT_PUBLIC_KEY",
        "WXT_PUBLIC_WEB_URL", 
        "WXT_PUBLIC_API_URL",
        "WXT_PUBLIC_WS_URL"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
