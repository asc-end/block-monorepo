{
  "name": "@blockit/indexer",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:all": "ts-node-dev --respawn --transpile-only src/combinedIndexer.ts",
    "dev:marketplace": "ts-node-dev --respawn --transpile-only src/marketplaceIndexer.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "ts-mocha -p ./tsconfig.json 'tests/**/*.test.ts'",
    "test:watch": "ts-mocha -p ./tsconfig.json --watch 'tests/**/*.test.ts'",
    "test:e2e": "ts-mocha -p ./tsconfig.json --timeout 120000 'tests/e2e/**/*.test.ts'",
    "test:e2e:devnet": "ts-mocha -p ./tsconfig.json --timeout 300000 'tests/e2e/escrowIndexer.devnet.test.ts'",
    "test:e2e:litesvm": "ts-mocha -p ./tsconfig.json --timeout 60000 'tests/e2e/escrowIndexer.litesvm.test.ts'",
    "test:e2e:surfpool": "ts-mocha -p ./tsconfig.json --timeout 300000 'tests/e2e/escrowIndexer.surfpool.test.ts'",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.31.1",
    "@blockit/database": "workspace:*",
    "@solana/web3.js": "^1.98.2",
    "@types/ws": "^8.5.10",
    "dotenv": "^16.4.5",
    "ws": "^8.16.0",
    "merkletreejs": "^0.3.11",
    "keccak256": "^1.0.6",
    "@blockit/shared": "workspace:*",
    "@sqds/multisig": "^2.1.3"
  },
  "devDependencies": {
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "chai": "^4.3.10",
    "eslint": "^8.56.0",
    "litesvm": "^0.2.0",
    "mocha": "^10.2.0",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}