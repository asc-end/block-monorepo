<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/overlay_gradient_background"
    android:animateLayoutChanges="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp">

        <!-- Lock icon similar to extension -->
        <ImageView
            android:id="@+id/lockIcon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@android:drawable/ic_lock_lock"
            android:tint="#1b7df5"
            android:alpha="0.9"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time to Focus!"
            android:textColor="#312E81"
            android:textSize="32sp"
            android:textStyle="bold"
            android:letterSpacing="-0.02"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/blockMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This app is blocked during your focus session.\nTake a deep breath and return to your important tasks."
            android:textColor="#8471B8"
            android:textSize="16sp"
            android:textAlignment="center"
            android:maxWidth="320dp"
            android:lineSpacingExtra="6dp"
            android:layout_marginBottom="24dp" />
        
        <!-- Timer countdown -->
        <TextView
            android:id="@+id/timerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#1b7df5"
            android:textSize="28sp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:layout_marginBottom="24dp"
            android:visibility="gone" />

        <!-- Focus Session Active badge -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/focus_badge_background"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:gravity="center"
            android:layout_marginBottom="32dp">
            
            <!-- Pulsing dot -->
            <View
                android:id="@+id/pulsingDot"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:background="@drawable/pulsing_dot"
                android:layout_marginEnd="8dp" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FOCUS SESSION ACTIVE"
                android:textColor="#1752b6"
                android:textSize="12sp"
                android:textStyle="bold"
                android:letterSpacing="0.05" />
        </LinearLayout>

        <!-- Buttons container -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/dismissButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minWidth="200dp"
                android:text="RETURN HOME"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:backgroundTint="#1b7df5"
                android:paddingHorizontal="24dp"
                android:paddingVertical="14dp"
                android:layout_marginBottom="12dp"
                android:letterSpacing="0.05" />

            <Button
                android:id="@+id/openAppButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minWidth="200dp"
                android:text="OPEN BLOCKIT"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:backgroundTint="#00E5CA"
                android:paddingHorizontal="24dp"
                android:paddingVertical="14dp"
                android:letterSpacing="0.05" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout> 