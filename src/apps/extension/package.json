{
  "name": "Blockit",
  "description": "A browser extension that enables secure wallet connections between desktop browsers and mobile devices.",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "dev:brave": "CHROME_PATH='/Applications/Brave Browser.app/Contents/MacOS/Brave Browser' wxt",
    "build": "wxt build",
    "build:brave": "CHROME_PATH='/Applications/Brave Browser.app/Contents/MacOS/Brave Browser' wxt build",
    "build:firefox": "wxt build -b firefox",
    "start:brave": "CHROME_PATH='/Applications/Brave Browser.app/Contents/MacOS/Brave Browser' wxt run",
    "zip": "rm -rf output && CHROME_PATH='/Applications/Brave Browser.app/Contents/MacOS/Brave Browser' wxt zip && mv .output output",
    "zip:firefox": "wxt zip -b firefox",
    "compile": "tsc --noEmit",
    "postinstall": "wxt prepare"
  },
  "dependencies": {
    "@blockit/cross-ui-toolkit": "workspace:*",
    "@blockit/ui": "workspace:*",
    "@privy-io/react-auth": "^2.14.2",
    "@types/qrcode.react": "^3.0.0",
    "axios": "^1.9.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-native-modalize": "^2.1.1",
    "react-router-dom": "^6.22.3"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.326",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.10",
    "@wxt-dev/module-react": "^1.1.3",
    "autoprefixer": "^10.4.17",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.8.3",
    "wxt": "^0.20.6"
  }
}
