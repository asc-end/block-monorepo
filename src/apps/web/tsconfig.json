{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": [
      "vite/client",
      // "chrome", // For chrome.runtime
      // "webextension-polyfill" // For browser.runtime
    ]
  },
  "include": ["src", "../../packages/ui/*", "node_modules/@blockit/ui", "../../packages/ui/index.ts", "../../packages/ui/src/constants"]
  // "exclude": ["node_modules"]
}
